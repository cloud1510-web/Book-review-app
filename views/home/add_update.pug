extends ../head.pug

block content
  h1= isEdit ? 'Edit Review' : 'Add New Review'

  form(action=isEdit ? `/reviews/${review._id}?_method=PUT` : '/add', method="POST", style="max-width: 600px; margin: auto; display: flex; flex-direction: column; gap: 15px;")

    label(for="title") Title:
    input(type="text", name="title", id="title", value=review ? review.title : "", required, placeholder="Enter book title")

    label(for="author") Author:
    input(type="text", name="author", id="author", value=review ? review.author : "", required, placeholder="Enter author name")

    label(for="genre") Genre:
    input(type="text", name="genre", id="genre", value=review ? review.genre : "", required, placeholder="Enter genre")

    label(for="rating") Rating (1â€“5):
    input(type="number", name="rating", id="rating", min="1", max="5", value=review ? review.rating : "", required)

    button(type="submit", style="background-color: seagreen; color: white; padding: 10px; border: none; cursor: pointer; border-radius: 5px; font-size: 16px;")
      = isEdit ? 'Update' : 'Create'